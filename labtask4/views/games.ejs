    <div id="first-container" class="py-4 px-2 d-flex justify-content-between">
        <h1 class="d-inline">Admin Access</h1>
        <div id="main-action-buttons" class="d-flex mx-5">
            <button id="load-button" type="button" class="btn btn- btn-outline-dark justify-content-around px-3 mx-2" onclick = 'window.location.href = "/add"'>
                <span>Add</span>
            </button>
            <button id="load-button" type="button" class="btn btn-smjustify-content-around bg-black px-3 mx-2" onclick = 'window.location.href = "/games"'>
                <span class="text-white">Load</span>
            </button>
        </div>
        
    </div>

    <table id='games-table' class="table table-striped table-dark rounded px-5">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Genre</th>
            <th scope="col">Downloads</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>

            <% for(let index = 0; index < games.length; index ++) { %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= games[index].title%></td>
                    <td><%= games[index].genre%></td>
                    <td><%= games[index].downloads%></td>
                    <td>
                        <button id="load-button" type="button" class="btn border btn-sm justify-content-around px-3 border-dark border-3">
                            <span class="text-white">Update</span>
                        </button>
                        <button id="delete-button" type="button" class="btn border btn-sm justify-content-around px-3 border-dark border-3" onclick=" window.location.href = '/delete:<%=games[index]._id%>'">
                            <span class="text-white">Delete</span>
                        </button>
                    </td>
                </tr>
            <% } %>
